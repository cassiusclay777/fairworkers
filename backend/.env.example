# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fairworkers
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_session_secret_change_in_production
SESSION_MAX_AGE=86400000

# Bcrypt
BCRYPT_ROUNDS=12

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,https://fairworkers.dpdns.org,https://fairworkers-frontend.pages.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=CZK

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@fairworkers.com

# SMS Configuration (Twilio for safety alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+420123456789

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# AWS S3 (Optional - for production file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=fairworkers-uploads

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:5173

# Redis Configuration (Optional - for Socket.IO scaling across multiple instances)
REDIS_URL=redis://localhost:6379

# Platform Settings
PLATFORM_COMMISSION_RATE=0.15
MINIMUM_PAYOUT_AMOUNT=500
PAYOUT_SCHEDULE_DAYS=7
SOLIDARITY_FUND_RATE=0.005
INSTANT_PAYOUT_FEE=0.02
BONUS_TIER_1_THRESHOLD=5000
BONUS_TIER_1_RATE=0.02
BONUS_TIER_2_THRESHOLD=20000
BONUS_TIER_2_RATE=0.05

# Security Settings
SAFETY_CHECK_INTERVAL_MINUTES=60
PANIC_BUTTON_ENABLED=true
EMERGENCY_CONTACTS=112,158

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
FEATURE_COMMUNITY_ENABLED=true
FEATURE_MOBILE_APP_ENABLED=false
FEATURE_VIDEO_VERIFICATION=false
