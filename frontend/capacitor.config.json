{
  "appId": "com.fairworkers.app",
  "appName": "FairWorkers",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "cleartext": true
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#000000",
      "showSpinner": false,
      "androidSpinnerStyle": "small",
      "spinnerColor": "#999999"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark"
    }
  }
}
